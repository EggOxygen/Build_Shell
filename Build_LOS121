cp -r '/media/eggoxygen/Source/B3UHL_SOURCE/B3UHL_CM121/device' '/media/eggoxygen/Source/B3UHL_SOURCE/B3UHL_CM121/kernel' '/media/eggoxygen/Source/B3UHL_SOURCE/B3UHL_CM121/vendor' '/media/eggoxygen/Source_Main/CM121'
