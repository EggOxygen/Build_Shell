#!/bin/bash

#2017-0317
#EggOxygen

#Don`t Remove CCACHE Dir
#Don`t MakeClean Because this just build for myself

#Build CM121
echo "Start Building CM121"
#Sync Lastest Source
# proxychains repo sync
#Clean
echo "Remove Old Files"
rm -rf "/media/eggoxygen/Source_Main/CM121/device/htc"
rm -rf "/media/eggoxygen/Source_Main/CM121/device/qcom/common"
rm -rf "/media/eggoxygen/Source_Main/CM121/kernel"
